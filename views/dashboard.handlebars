<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
  <div class="mb-3">
    <label for="post-title" class="form-label">Title</label>
    <input type="text" class="form-control" id="post-title" placeholder="Craft a gripping title!">
  </div>
  <div class="mb-3">
    <label for="post-url" class="form-label">Link</label>
    <input class="form-control" id="post-url" placeholder="www.interestingballetarticle.com">
  </div>
  <button type="submit" class="btn btn-outline-dark">Submit</button>
</form>

</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>